pipeline {
    agent any

    environment {
        APP_DIR = "/home/ksr/backend_Flask"
        VENV = "/home/ksr/backend_Flask/venv"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ksrawat123/Backend_Demo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                python3 -m venv venv
                source venv/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                source venv/bin/activate
                pytest || true
                '''
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                sudo systemctl restart flask-app
                '''
            }
        }
    }

    post {
        success {
            echo "Flask App Deployed Successfully"
        }
        failure {
            echo "Deployment Failed"
        }
    }
}

